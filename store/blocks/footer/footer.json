{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {  
    "children": [
      "flex-layout.row#color-tone",
      "flex-layout.row#footer-content",
      "flex-layout.row#legal-docs"
    ]
  },
  "flex-layout.row#color-tone": {
    "props": {
      "blockClass": "color-tone1"
    }
  },

  "flex-layout.row#footer-content": {
    "children": ["rich-text#content-footer",
                 "flex-layout.col#contact-us",
                 "flex-layout.col#reach-us"],
    "props": {
      "blockClass": "footer-content"
    }
  },
  "rich-text#content-footer": {
    "props": {
      "text": "MERCEDES-BENZ",
      "font-size": 30
    }
  },
 "flex-layout.col#contact-us":{
    "children": ["rich-text#contact-us-title", 
    "rich-text#contact-us-content",
    "rich-text#contact-us-mail"]
  },
  "rich-text#contact-us-title": {
    "props": {
      "text": "Contact Us",
      "blockClass": "contact-us-title"
    }
  },
 "rich-text#contact-us-content": {
    "props": {
      "text": " Gargash Enterprises L.L.C Authorized General Distributor of Mercedes-Benz in Dubai, Sharjah and Northern Emirates Al Ittihad Street",
      "blockClass": "contact-us-content"
    }
  },
  "rich-text#contact-us-mail": {
    "props": {
      "text": "support@mercedesbenz.com",
      "blockClass": "contact-us-mail"
    }
  },
  "flex-layout.col#reach-us":{
    "children": ["rich-text#reach-us-title",
                  "rich-text#reach-us-location", 
                  "rich-text#reach-us-contact",
                  "rich-text#reach-us-follow",
                  "social-networks"]
  },
  "rich-text#reach-us-title": {
    "props": {
      "text": "Reach us here",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "contact-us-title"
    }
  },
  "rich-text#reach-us-location": {
    "props": {
      "text": "Our Locations",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "reach-us-location"
    }
  },
  "rich-text#reach-us-contact": {
    "props": {
      "text": "Contact Us",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "reach-us-contact"
    }
  },
  "rich-text#reach-us-follow": {
    "props": {
      "text": "Follow Us",
      "textAlignment": "CENTER",
      "textPosition": "CENTER",
      "blockClass": "reach-us-follow"
    }
  },
  
  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "twitter",
          "url": "https://twitter.com/vtexonline"
        },
        {
          "name": "youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },
  "flex-layout.row#legal-docs": {
    "children": ["flex-layout.col#copyright",
                 "flex-layout.row#privacy-policy-container"],
    "props": {
      "blockClass": "legal-docs",
      "width" : "grow"
    }
  },
  "flex-layout.col#copyright" :{
    "children": ["rich-text#copyright", "flex-layout.col#spacer"]
  },
  "rich-text#copyright": {
    "props": {
      "text": "Â© 2019 VTEX. All Rights Reserved.",
      "blockClass": "copyright"
    }
  },
  "flex-layout.col#spacer" :{
    "props": {
      "width" : "grow"
    }
  },

  "flex-layout.row#privacy-policy-container" :{
    "children": ["flex-layout.col#privacy-policy1",
                 "flex-layout.col#privacy-policy2",
                 "flex-layout.col#privacy-policy3"] 
  },
  "flex-layout.col#privacy-policy1" :{
    "children": ["rich-text#privacy-policy1"]
  },
  "flex-layout.col#privacy-policy2" :{
    "children": ["rich-text#privacy-policy2"]

  },
  "flex-layout.col#privacy-policy3" :{
    "children": ["rich-text#privacy-policy3"]
  },
  
  "rich-text#privacy-policy1": {
    "props": {
      "text": "Privacy Policy",
      "justify-content":"end",
      "blockClass": "privacy-policy1"
    }
  },
  "rich-text#privacy-policy2": {
    "props": {
      "text": "Privacy Policy",
      "blockClass": "privacy-policy2"
    }
  },
  "rich-text#privacy-policy3": {
    "props": {
      "text": "Privacy Policy",
      "blockClass": "privacy-policy3"
    }
  },
  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  }
}
